doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.mb-4
      div.container
        a.navbar-brand(href='/')
          span.fw-bold.text-primary My
          span.fw-light Library
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/books') Books
            li.nav-item
              a.nav-link(href='/authors') Authors
    
    div.container
      div.row
        div.col-md-3.mb-4
          div.card.sidebar
            div.card-body.p-3
              div.list-group
                a.list-group-item(href='/', class=title === 'Library Home' ? 'active' : '') Home
                a.list-group-item(href='/books', class=title === 'Book List' ? 'active' : '') All books
                a.list-group-item(href='/authors', class=title === 'Author List' ? 'active' : '') All authors
                hr.my-3
                a.list-group-item(href='/books/create') Create new book
                a.list-group-item(href='/authors/create') Create new author
                
        div.col-md-9
          block content
      
      footer.mt-5.py-4.text-center.border-top
        p.mb-0 &copy; 2025 My Library. All rights reserved.
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')